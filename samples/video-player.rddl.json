{
    "pages": {
        "player": {
            "views": [
                {   "profiles": [ "horizontal" ],
                    "document": {
                        "type": "component",
                        "id": "video"
                    }
                },
                {   "profiles": [ "vertical" ],
                    "document": {
                        "type": "container",
                        "constructor": "vertical-box",
                        "children": [ {
                            "type": "component",
                            "id": "video"
                        }, {
                            "type": "component",
                            "id": "info"
                        } ]
                    }
                },
                {   "profiles": [ "large" ],
                    "document": {
                        "type": "container",
                        "constructor": "horizontal-box",
                        "children": [ {
                            "type": "component",
                            "id": "video"
                        }, {
                            "type": "component",
                            "id": "info"
                        } ]
                    }
                }
            ],
            "components": {
                "video": {
                    "priority": "required",
                    "constructor": "video-player",
                    "aspectRatio": 1.5
                },
                "info": {
                    "priority": "optional",
                    "constructor": "video-information"
                }
            }
        }
    },
    "profiles": {
        "vertical": { "displayAspectRatio": { "max": { "excluded": 1} } },
        "horizontal": { "displayAspectRatio": { "min": 1, "max": { "excluded": 2.5} } },
        "large": { "displayAspectRatio": { "min": 2.5 } }
    }
}
